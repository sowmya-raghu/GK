<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardElevation="4dp"
    android:layout_marginTop="20dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="18dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Media -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:id="@+id/quote_image"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:contentDescription="quote"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">
            <CheckBox
                android:id="@+id/iconLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/ic_favorite_border_black_24dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="14dp"
                android:text="Like"
                android:textSize="10sp"
                app:buttonTint="@color/colorPrimaryDark"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/iconComments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_mode_comment_black_24dp"
                app:iconTint="@color/colorPrimaryDark"
                android:text="Comments"
                android:textSize="10sp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/iconSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_file_download_black_24dp"
                app:iconTint="@color/colorPrimaryDark"
                android:layout_marginTop="10dp"
                android:text="Save"
                android:textSize="10sp"
                android:layout_marginLeft="5dp"
                android:textAllCaps="false"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/iconShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_share_black_24dp"
                app:iconTint="@color/colorPrimaryDark"
                android:text="Share"
                android:textSize="10sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                />
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>