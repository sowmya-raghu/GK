<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        tools:context=".ChangePasswordActivity">


        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/passwordbackbtn"
            app:icon="@drawable/ic_arrow_back_black_24dp"
            app:iconTint="@color/colorPrimaryDark"
            app:iconSize="42sp"
            app:iconGravity="start"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            style="@style/Widget.MaterialComponents.Button.TextButton"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="Update Password"
            android:fontFamily="sans-serif-medium"
            android:textSize="24dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorPrimaryDark"/>

        <LinearLayout
            android:id="@+id/layout_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:layout_marginBottom="60dp"
            android:visibility="visible"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="15dp"
                android:layout_marginBottom="30dp"
                android:elevation="10dp"
                app:cardBackgroundColor="@color/colorWhite"
                app:cardCornerRadius="10dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="false"
                card_view:cardElevation="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="16dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:id="@+id/emailIdChange"
                        android:text="Email Id"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="22dp"
                        android:textColor="@color/colorPrimaryDark"/>

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/emailIdChangeEdit"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="16dp"
                        android:layout_below="@+id/emailIdChange"
                        android:hint="Enter Email Id"
                        android:textColorHint="@color/overlayBackground"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="16dp"
                        android:layout_below="@+id/emailIdChangeEdit"
                        android:id="@+id/oldpwd"
                        android:text="Old Password"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="22dp"
                        android:textColor="@color/colorPrimaryDark"/>

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/oldpwdedit"
                        app:endIconMode="password_toggle"
                        android:imeOptions="actionNext"
                        android:inputType= "textPhonetic"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="16dp"
                        android:layout_below="@+id/oldpwd"
                        android:hint="Enter Old Password"
                        android:textColorHint="@color/overlayBackground"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="16dp"
                        android:layout_below="@+id/oldpwdedit"
                        android:id="@+id/newpwd"
                        android:text="New Password"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="22dp"
                        android:textColor="@color/colorPrimaryDark"/>

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/newpwdedit"
                        app:endIconMode="password_toggle"
                        android:imeOptions="actionNext"
                        android:inputType= "textPhonetic"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="16dp"
                        android:layout_below="@+id/newpwd"
                        android:hint="Enter New Password"
                        android:textColorHint="@color/overlayBackground"/>


                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </RelativeLayout>
    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/changePwd"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        app:cornerRadius="8dp"
        android:text="Change Password"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/colorWhite"
        app:backgroundTint="@color/colorPrimaryDark"/>
</RelativeLayout>