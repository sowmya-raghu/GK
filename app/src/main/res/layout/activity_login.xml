<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".LoginActivity">



    <RelativeLayout
        android:id="@+id/rl_one_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/v_one_login"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="@drawable/loginpagegk"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lin_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="370dp"
        android:visibility="visible"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_login"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="15dp"
            android:elevation="10dp"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardCornerRadius="10dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="false"
            card_view:cardElevation="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/emailTextField"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:startIconDrawable="@drawable/ic_account_circle_black_24dp"
                    app:startIconTint="@color/colorPrimary"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:hint="Email"
                    android:textColorHint="@color/colorPrimary"
                    app:hintTextColor="@color/colorPrimaryDark"
                    app:boxStrokeColor="@color/colorPrimaryDark">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:id="@+id/passwordField"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/emailTextField"
                    android:layout_marginTop="20dp"
                    android:hint="Enter your Password"
                    app:hintTextColor="@color/colorPrimaryDark"
                    android:textColorHint="@color/colorPrimary"
                    app:startIconDrawable="@drawable/ic_vpn_key_black_24dp"
                    app:endIconMode="password_toggle"
                    app:startIconTint="@color/colorPrimary"
                    app:endIconTint="@color/colorPrimary"
                    app:boxStrokeColor="@color/colorPrimaryDark">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionNext"
                        android:inputType= "textPhonetic" />

                </com.google.android.material.textfield.TextInputLayout>

            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnLayout"
        android:layout_below="@id/lin_card"
        android:layout_marginTop="-50dp"
        android:elevation="15dp"
        android:gravity="center">

        <Button
            android:id="@+id/login_button"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="@drawable/custom_circle"
            android:text="Login"
            android:backgroundTint="@color/colorPrimaryDark"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:text="Forgot Password?"
        android:layout_below="@id/btnLayout"
        android:id="@+id/forgotpwd"
        android:layout_margin="16dp"
        android:textSize="14sp"
        android:layout_alignParentRight="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/socialMedia"
        android:layout_below="@+id/forgotpwd"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:gravity="center">


        <com.google.android.material.button.MaterialButton
            xmlns:fb="http://schemas.android.com/apk/res-auto"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:id="@+id/fblogin_button"
            android:layout_marginTop="20dp"
            app:icon="@drawable/facebooklogo"
            app:iconSize="30dp"
            app:iconTint="@color/colorWhite"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="Login"
            android:textColor="@color/colorWhite"
            android:textAllCaps="true"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:id="@+id/gmailLogin"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            app:icon="@drawable/gmaillogo"
            app:iconSize="30dp"
            app:iconTint="#eeeeee"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="Login"
            android:textColor="@color/colorWhite"
            android:textAllCaps="true"/>

    </LinearLayout>


    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/regField"
        android:layout_below="@+id/socialMedia"
        android:textAlignment="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:text="Don't Have an Account Yet? Register Here"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/overlayBackground"/>
</RelativeLayout>
</ScrollView>